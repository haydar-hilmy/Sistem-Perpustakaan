<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" prefHeight="648.0" prefWidth="769.0"
            xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.minim.library.pbo_perpus.controllers.bukuController">
    <children>
        <VBox layoutX="14.0" layoutY="133.0" spacing="5.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Search Product" />
                <HBox prefHeight="39.0" prefWidth="749.0" spacing="5.0">
                    <children>
                    <TextField fx:id="tfsearch" prefHeight="35.0" prefWidth="700" />
                </children>
                </HBox>
                <TableView fx:id="tbBuku" onMouseClicked="#pilihProduk"
                           prefHeight="276.0" prefWidth="619.0">
                    <columns>
                        <TableColumn fx:id="cidBuku" prefWidth="75.0"
                                     text="Id Buku" />
                        <TableColumn fx:id="cjudul" prefWidth="248.0"
                                     text="Judul" />
                        <TableColumn fx:id="cpenerbit" prefWidth="123.0" text="Penerbit" />
                        <TableColumn fx:id="cpenulis" prefWidth="129.0"
                                     text="Penulis" />
                        <TableColumn fx:id="ctahun_terbit" prefWidth="169.0" text="Tahun terbit" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <GridPane layoutX="98.0" layoutY="369.0" prefHeight="168.0"
                  prefWidth="381.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="184.0"
                                   minWidth="10.0" prefWidth="132.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="249.0"
                                   minWidth="10.0" prefWidth="249.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Id Buku" />
                <Label layoutX="10.0" layoutY="17.0" text="Judul"
                       GridPane.rowIndex="1" />
                <Label layoutX="10.0" layoutY="47.0" text="Penerbit"
                       GridPane.rowIndex="2" />
                <Label layoutX="10.0" layoutY="77.0" text="Penulis"
                       GridPane.rowIndex="3" />
                <Label layoutX="10.0" layoutY="107.0" text="Tahun Terbit" GridPane.rowIndex="4" />
                <TextField fx:id="tfidBuku" GridPane.columnIndex="1" />
                <TextField fx:id="tfjudul" layoutX="110.0" layoutY="13.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="tfpenerbit" layoutX="110.0" layoutY="43.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="tfpenulis" layoutX="110.0" layoutY="73.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="tftahun_terbit" layoutX="110.0" layoutY="103.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
        </GridPane>
        <ButtonBar layoutX="35.0" layoutY="544.0" prefHeight="61.0" prefWidth="579.0">
            <buttons>
                <Button fx:id="bAdd" minWidth="69.0" mnemonicParsing="false" onAction="#add" prefHeight="35.0" prefWidth="86.0" style="-fx-background-color: maroon;" text="Add" textFill="#f2f2f2">
                    <graphic>
                        <FontAwesomeIconView fill="#f5f2f2" glyphName="FILE" size="1.5em">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </FontAwesomeIconView>
                    </graphic></Button>
                <Button fx:id="bEdit" layoutX="439.0" layoutY="18.0"
                        mnemonicParsing="false" onAction="#edit" prefHeight="34.0" style="-fx-background-color: maroon;" text="Edit" textFill="#fffdfd">
                    <graphic>
                        <FontAwesomeIconView fill="#f2ecec" glyphName="PENCIL" size="1.5em" />
                    </graphic>
                    <font>
                        <Font size="14.0" />
                    </font></Button>
                <Button fx:id="bDel" layoutX="354.0" layoutY="18.0" mnemonicParsing="false" onAction="#del" style="-fx-background-color:
maroon;" text="Del" textFill="#eee9e9">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="TRASH" size="1.5em" />
                    </graphic>
                    <font>
                        <Font size="14.0" />
                    </font></Button>
                <Button fx:id="bUpdate" layoutX="269.0" layoutY="18.0"
                        mnemonicParsing="false" onAction="#update" prefHeight="31.0"
                        prefWidth="115.0" style="-fx-background-color: maroon;" text="Update"
                        textFill="#eeeaea">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="#f5f3f3"
                                             glyphName="CHECK" size="1.5em" />
                    </graphic></Button>
                <Button fx:id="bCancel" layoutX="184.0" layoutY="18.0"
                        mnemonicParsing="false" onAction="#cancel" style="-fx-background-color:maroon;" text="Cancel" textFill="#f2eeee">
                    <graphic>
                        <FontAwesomeIconView fill="#eee9e9" glyphName="SHARE" size="1.5em" />
                    </graphic>
                    <font>
                        <Font size="14.0" />
                    </font></Button>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>