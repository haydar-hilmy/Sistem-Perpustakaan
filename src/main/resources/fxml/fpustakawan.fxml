<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.minim.library.pbo_perpus.controllers.pustakawanController">
   <children>
      <VBox layoutX="4.0" prefHeight="82.0" prefWidth="600.0">
         <children>
            <Label text="Search Pustakawan" />
            <TextField fx:id="tfsearch" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <TableView fx:id="tbPustakawan" layoutX="2.0" layoutY="82.0" onMouseClicked="#pilihProduk" prefHeight="158.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="cidPustakawan" prefWidth="42.0" text="Id" />
          <TableColumn fx:id="cnama" prefWidth="191.0" text="Nama" />
            <TableColumn fx:id="calamat" prefWidth="322.0" text="Alamat" />
        </columns>
      </TableView>
      <GridPane layoutX="4.0" layoutY="240.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="101.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" prefWidth="499.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Id Pustakawan" />
            <Label text="Nama" GridPane.rowIndex="1" />
            <Label text="Alamat" GridPane.rowIndex="2" />
            <TextField fx:id="tfidPustakawan" promptText="Auto Increment" GridPane.columnIndex="1" />
            <TextField fx:id="tfnama" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="tfalamat" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <HBox alignment="CENTER" layoutX="63.0" layoutY="339.0" prefHeight="54.0" prefWidth="509.0" spacing="12.0">
         <children>
             <Button fx:id="bAdd" mnemonicParsing="false" onAction="#add" prefHeight="34.0" prefWidth="83.0" style="-fx-background-color: #79D70F;" text="Add" textFill="WHITE">
                 <graphic>
                     <FontAwesomeIconView fill="#f5f2f2" glyphName="FILE" size="1.5em">
                         <font>
                             <Font size="14.0" />
                         </font>
                     </FontAwesomeIconView>
                 </graphic>
             </Button>
             <Button fx:id="bEdit" mnemonicParsing="false" onAction="#edit" prefHeight="34.0" prefWidth="83.0" style="-fx-background-color: #4F98CA;" text="Edit" textFill="WHITE" >
                 <graphic>
                     <FontAwesomeIconView fill="#f2ecec" glyphName="PENCIL" size="1.5em" />
                 </graphic>
                 <font>
                     <Font size="14.0" />
                 </font>
             </Button>
             <Button fx:id="bDel" mnemonicParsing="false" onAction="#del" prefHeight="34.0" prefWidth="83.0" style="-fx-background-color: #D32626;" text="Del" textFill="WHITE">
                 <graphic>
                     <FontAwesomeIconView fill="WHITE" glyphName="TRASH" size="1.5em" />
                 </graphic>
                 <font>
                     <Font size="14.0" />
                 </font>
             </Button>
             <Button fx:id="bUpdate" mnemonicParsing="false" onAction="#update" prefHeight="34.0" prefWidth="83.0" style="-fx-background-color: #79D70F;" text="Update" textFill="WHITE" >
                 <font>
                     <Font size="14.0" />
                 </font>
                 <graphic>
                     <FontAwesomeIconView fill="#f5f3f3"
                                          glyphName="CHECK" size="1.5em" />
                 </graphic>
             </Button>
             <Button fx:id="bCancel" mnemonicParsing="false" onAction="#cancel" prefHeight="34.0" prefWidth="83.0" style="-fx-background-color: transparent; -fx-border-color: #000; -fx-border-radius: 6px;" text="Cancel" >
                 <graphic>
                     <FontAwesomeIconView fill="#000" glyphName="SHARE" size="1.5em" />
                 </graphic>
                 <font>
                     <Font size="14.0" />
                 </font>
             </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
